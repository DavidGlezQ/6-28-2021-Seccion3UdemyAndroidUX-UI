<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/common_padding_default"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".Fragments.AlertDialogFragment">
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDialogInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_info"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDialogChooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_chooser"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDialogConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_confirm"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDialogFullScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_full_screen"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>


</androidx.appcompat.widget.LinearLayoutCompat>